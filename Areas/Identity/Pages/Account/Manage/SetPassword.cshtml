@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-3">
                        <i class="bi bi-lock-fill me-2 text-primary"></i>Set Your Password
                    </h3>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <p class="text-muted text-center mb-4">
                        You currently don’t have a local password.
                        Set one below to log in without an external provider.
                    </p>

                    <form id="set-password-form" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password"
                                   placeholder="Enter your new password" />
                            <label asp-for="Input.NewPassword"></label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                   placeholder="Confirm your new password" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                            <i class="bi bi-check-circle me-1"></i>Set Password
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* ==== Page Background ==== */
    body {
        background: linear-gradient(135deg, #e9f1ff, #f7f9fc);
        min-height: 100vh;
    }

    /* ==== Card Styling ==== */
    .card {
        border-radius: 1rem;
        transition: all 0.25s ease-in-out;
        border: none;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    /* ==== Buttons ==== */
    .btn-primary {
        background: #007bff;
        border: none;
        border-radius: 0.5rem;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    /* ==== Headings ==== */
    h3 {
        font-weight: 600;
        color: #004aad;
    }

    /* ==== Inputs ==== */
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    /* ==== Icons ==== */
    .bi {
        vertical-align: middle;
    }

    /* ==== Spacing adjustments ==== */
    .container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }
</style>