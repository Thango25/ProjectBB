@model List<Project.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container-fluid px-5">
        <div class="hero-content text-center text-white">
            <h1 class="hero-title mb-4">Find What You Lost or Report What You Found</h1>
            <p class="hero-subtitle mb-5">Connecting lost items with their owners</p>

            <div class="search-box bg-white p-4 rounded shadow">
                <div class="row g-2">
                    <div class="col-md-3">
                        <select class="form-select category-dropdown py-3">
                            <option value="lost">I Lost Something</option>
                            <option value="found">I Found Something</option>
                        </select>
                    </div>
                    <div class="col-md-7">
                        <select class="form-select location-input py-3">
                            <option value="">Select Item Category</option>
                            @foreach (var category in Model)
                            {
                                <option value="@category.Name.ToLower()">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <form asp-controller="Items" asp-action="Index" method="get">
                            <button class="btn search-btn w-100 py-3">SEARCH</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Browse Categories -->
<section class="section bg-light">
    <div class="container-fluid px-5">
        <h2 class="section-title text-center">Browse Items By Category</h2>

        <div id="categoriesCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                @{
                    int chunkSize = 6;
                    int totalChunks = (int)Math.Ceiling(Model.Count / (double)chunkSize);
                }

                @for (int i = 0; i < totalChunks; i++)
                {
                    var chunk = Model.Skip(i * chunkSize).Take(chunkSize).ToList();
                    var activeClass = i == 0 ? "active" : "";

                    <div class="carousel-item @activeClass">
                        <div class="row g-4">
                            @foreach (var category in chunk)
                            {
                                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                                    <div class="card h-100 border-0 shadow-sm hover-effect">
                                        <div class="card-body text-center">
                                            <i class="@category.IconClass fa-3x mb-3 text-primary"></i>
                                            <h5 class="card-title">@category.Name</h5>
                                            <p class="text-muted"> 
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#categoriesCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-primary rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#categoriesCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-primary rounded-circle p-3" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>


