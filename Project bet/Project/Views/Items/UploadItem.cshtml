@model Project.Models.Item

@{
    ViewData["Title"] = Model.Type == Project.Models.ItemType.Lost ? "Upload Lost Item" : "Upload Found Item";
    var isLost = Model.Type == Project.Models.ItemType.Lost;
}

<div class="container bg-white p-5 shadow rounded" style="max-width: 800px; margin: auto;">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="@(isLost ? "UploadLostItem" : "UploadFoundItem")"
          method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Type" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">
                Item Name <span class="text-danger">*</span>
            </label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">
                Description <span class="text-danger">*</span>
            </label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Brand" class="form-label">Brand</label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Color" class="form-label">Color</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label">
                Location Found/Lost <span class="text-danger">*</span>
            </label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DateLost" class="form-label">
                @(isLost ? "Date Lost" : "Date Found") <span class="text-danger">*</span>
            </label>
            <input asp-for="DateLost" class="form-control" type="date" />
            <span asp-validation-for="DateLost" class="text-danger"></span>
        </div>

        <!-- 🔑 Verification Question -->
        <div class="mb-3">
            <label asp-for="VerificationQuestion" class="form-label">
                Verification Question <span class="text-danger">*</span>
            </label>
            <input asp-for="VerificationQuestion" class="form-control" />
            <span asp-validation-for="VerificationQuestion" class="text-danger"></span>
        </div>

        <!-- 🔑 Verification Answer -->
        <div class="mb-3">
            <label asp-for="VerificationAnswer" class="form-label">
                Verification Answer <span class="text-danger">*</span>
            </label>
            <input asp-for="VerificationAnswer" class="form-control" />
            <span asp-validation-for="VerificationAnswer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Upload Image</label>
            <input asp-for="ImageFile" class="form-control" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-5">
                Submit @ViewData["Title"]
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
