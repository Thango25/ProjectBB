@model Project.Models.Item

@{
    ViewData["Title"] = "Delete " + (Model.Type == Project.Models.ItemType.Lost ? "Lost Item" : "Found Item");
    var isLost = Model.Type == Project.Models.ItemType.Lost;
}

<div class="bg-dark text-white min-vh-100 py-4 px-3 px-md-5">
    <div class="container text-center">
        <h4 class="mb-4">Are you sure you want to delete this @Model.Type.ToString().ToLower() item?</h4>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card bg-secondary rounded p-4 shadow w-100">
            <div class="card-body">
                <div class="text-center">
                    <h3>
                        @Model.Title
                        <span class="badge @(isLost ? "bg-danger" : "bg-success")">
                            @(isLost ? "Lost" : "Found")
                        </span>
                    </h3>
                </div>
                <hr class="bg-light" />
                <dl class="row">
                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.Location</dd>

                    <dt class="col-sm-4">Date @(isLost ? "Lost" : "Found")</dt>
                    <dd class="col-sm-8">@Model.DateLost.ToShortDateString()</dd>

                    <dt class="col-sm-4">Image</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <img src="~/uploads/@Model.PhotoPath" alt="Item Image" class="img-fluid rounded" style="max-width: 200px;" />
                        }
                        else
                        {
                            <span>No image uploaded</span>
                        }
                    </dd>
                </dl>

                <div class="mt-4 text-center">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-action="Index" class="btn btn-success">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>