@model Project.Models.Item

@{
    ViewData["Title"] = "Delete " + (Model.Type == Project.Models.ItemType.Lost ? "Lost Item" : "Found Item");
}

<h1 class="text-danger text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Are you sure you want to delete this @Model.Type item?</h4>

<hr />
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Date @Model.Type</dt>
    <dd class="col-sm-10">@Model.DateLost.ToShortDateString()</dd>

    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="~/uploads/@Model.PhotoPath" width="200" />
        }
        else
        {
            <span>No image</span>
        }
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
