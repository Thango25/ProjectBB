@model Project.Models.Profile

@{
    ViewData["Title"] = "User Profile";
}


<style>

    body {
        background-color: #1a1a2e;
        background-image: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        color: #e0e0e0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }


    .container.py-5 {
        flex-grow: 1;
    }


    .card {
        background-color: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        color: #e0e0e0;
    }


    .card-header {
        background-color: rgba(255, 255, 255, 0.05);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1.25rem 1.5rem;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .card-title {
        color: #ffffff;
    }


    .profile-initials-circle {
        background-color: rgba(40, 167, 69, 0.7);
        backdrop-filter: blur(5px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        font-size: 3rem;
        font-weight: bold;
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1rem;
    }


    .list-group-item {
        background-color: transparent;
        border-color: rgba(255, 255, 255, 0.1);
        color: #e0e0e0;
    }

        .list-group-item a {
            color: #e0e0e0 !important;
        }

        .list-group-item.active {
            background-color: rgba(0, 123, 255, 0.3);
            border-color: rgba(0, 123, 255, 0.5);
            color: #ffffff !important;
        }

            .list-group-item.active a {
                color: #ffffff !important;
            }


    .form-control.glassy-input {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #ffffff;
        border-radius: 8px;
    }

        .form-control.glassy-input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .form-control.glassy-input:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: rgba(0, 123, 255, 0.5);
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            color: #ffffff;
        }



    .btn.glassy-button {
        background-color: rgba(0, 123, 255, 0.7);
        border: 1px solid rgba(0, 123, 255, 0.8);
        color: #ffffff;
        backdrop-filter: blur(5px);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn.glassy-button:hover {
            background-color: rgba(0, 123, 255, 0.9);
            border-color: rgba(0, 123, 255, 1);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
        }

    .btn-success.glassy-button {
        background-color: rgba(40, 167, 69, 0.7);
        border: 1px solid rgba(40, 167, 69, 0.8);
    }

        .btn-success.glassy-button:hover {
            background-color: rgba(40, 167, 69, 0.9);
            border-color: rgba(40, 167, 69, 1);
        }

    .btn-secondary.glassy-button {
        background-color: rgba(108, 117, 125, 0.7);
        border: 1px solid rgba(108, 117, 125, 0.8);
    }

        .btn-secondary.glassy-button:hover {
            background-color: rgba(108, 117, 125, 0.9);
            border-color: rgba(108, 117, 125, 1);
        }


    .profile-info-display .d-flex {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 0.5rem;
    }

        .profile-info-display .d-flex small {
            color: rgba(255, 255, 255, 0.8);
        }

        .profile-info-display .d-flex p {
            color: #ffffff;
            font-weight: bold;
        }

        .profile-info-display .d-flex i {
            color: #007bff;
        }

    .profile-info-display .bg-light {
        background-color: rgba(255, 255, 255, 0.05) !important;
    }

    h1, h2, h3, h4, h5, h6 {
        color: #ffffff;
    }

    p, span, label {
        color: #e0e0e0;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
    }

    .text-danger {
        color: #ff6b6b !important;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-md-9">
            <h2 class="mb-4">User Profile</h2>
            <p class="text-muted mb-4">Manage your personal information and account settings</p>

            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card text-center p-3">
                        <h3 class="mb-1">3</h3>
                        <p class="text-muted mb-0">Items Lost</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center p-3">
                        <h3 class="mb-1">7</h3>
                        <p class="text-muted mb-0">Items Found</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center p-3">
                        <h3 class="mb-1">5</h3>
                        <p class="text-muted mb-0">Reunited</p>
                    </div>
                </div>
            </div>

            <div class="card p-4 mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Personal Details</h4>
                    <button type="button" class="btn btn-success glassy-button" id="editProfileBtn">
                        <i class="fas fa-edit me-1"></i> Edit Profile
                    </button>
                    <button type="button" class="btn btn-success glassy-button" id="saveProfileBtn" style="display: none;">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                </div>

                <form id="profileForm" class="profile-form" enctype="multipart/form-data">
                    <div id="profileDisplay" class="row g-3 profile-info-display">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-user-circle me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Full Name</small>
                                    <p class="mb-0" id="displayFullName">@Model.Name @Model.Surname</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-user me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Username</small>
                                    <p class="mb-0" id="displayUsername">@Model.Username</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-venus-mars me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Gender</small>
                                    <p class="mb-0">Female</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-globe me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Nationality</small>
                                    <p class="mb-0">African</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-phone me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Phone Number</small>
                                    <p class="mb-0" id="displayPhone">@Model.PhoneNumber</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center bg-light p-2 rounded">
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                <div>
                                    <small class="text-muted">Email</small>
                                    <p class="mb-0" id="displayEmail">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="profileEdit" class="row g-3" style="display: none;">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" type="text" class="form-control glassy-input">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Surname" class="form-label"></label>
                            <input asp-for="Surname" type="text" class="form-control glassy-input">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" type="text" class="form-control glassy-input">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control glassy-input">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control glassy-input">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" type="text" class="form-control glassy-input">
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>

            <div class="card p-4">
                <h4 class="mb-3">My Items</h4>
                <div class="dropdown mb-3">
                    <button class="btn btn-outline-secondary glassy-button dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-eye me-1"></i> View Items
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="#">All Items</a></li>
                        <li><a class="dropdown-item" href="#">Lost Items</a></li>
                        <li><a class="dropdown-item" href="#">Found Items</a></li>
                        <li><a class="dropdown-item" href="#">Reunited Items</a></li>
                    </ul>
                </div>
                <div class="text-center text-muted">
                    <p>No items to display yet. Start by reporting a lost or found item!</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            const profileForm = $('#profileForm');
            const profileDisplay = $('#profileDisplay');
            const profileEdit = $('#profileEdit');
            const editProfileBtn = $('#editProfileBtn');
            const saveProfileBtn = $('#saveProfileBtn');

            function toggleProfileMode(isEditing) {
                if (isEditing) {
                    profileDisplay.hide();
                    profileEdit.show();
                    editProfileBtn.hide();
                    saveProfileBtn.show();

                    $('#Name').val($('#displayFullName').text().split(' ')[0]);
                    $('#Surname').val($('#displayFullName').text().split(' ')[1]);
                    $('#Username').val($('#displayUsername').text().replace('@@', ''));
                    $('#Email').val($('#displayEmail').text());
                    $('#PhoneNumber').val($('#displayPhone').text());
                    if ($('#displayLocation').length) {
                        $('#Location').val($('#displayLocation').text());
                    }

                } else {
                    profileDisplay.show();
                    profileEdit.hide();
                    editProfileBtn.show();
                    saveProfileBtn.hide();
                }
            }

            toggleProfileMode(false);

            editProfileBtn.on('click', function () {
                toggleProfileMode(true);
            });

            saveProfileBtn.on('click', function (e) {
                e.preventDefault();

                if (!profileForm.valid()) {
                    return;
                }

                var formData = new FormData(profileForm[0]);

                $.ajax({
                    url: '@Url.Action("SaveProfile", "Profile")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);


                            $('#displayFullName').text(response.profile.name + ' ' + response.profile.surname);
                            $('#displayUsername').text(response.profile.username);
                            $('#displayEmail').text(response.profile.email);
                            $('#displayPhone').text(response.profile.phoneNumber);
                            if (response.profile.location) {
                                $('#displayLocation').text(response.profile.location);
                            }

                            toggleProfileMode(false);
                        } else {
                            alert('Error: ' + response.message + '\n' + (response.errors ? response.errors.join('\n') : ''));
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred while saving profile: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
}

