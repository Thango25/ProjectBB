@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-gear-fill me-2"></i>Manage Your Account
        </h1>
        <p class="text-muted fs-5">Change your account settings and personal information</p>
        <hr class="w-50 mx-auto opacity-75" />
    </div>

    <div class="row g-4">
        <!-- Left Navigation -->
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-body p-3">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <!-- Right Content -->
        <div class="col-lg-9 col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
<style>
    /* ==== Identity Manage Page ==== */
    h1, h2, h3 {
        color: #004aad;
    }

    .card {
        border-radius: 1rem;
        transition: all 0.25s ease-in-out;
        border: none;
        background-color: #fff;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    hr {
        border-top: 2px solid rgba(0, 74, 173, 0.1);
    }

    /* Manage Navigation links */
    #manage-nav a {
        color: #004aad;
        text-decoration: none;
        display: block;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
        transition: 0.2s;
    }

        #manage-nav a.active,
        #manage-nav a:hover {
            background-color: #e8f0ff;
            color: #0056b3;
        }

</style>