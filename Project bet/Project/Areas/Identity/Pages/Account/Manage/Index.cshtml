@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-3">
                        <i class="bi bi-person-circle me-2 text-primary"></i>@ViewData["Title"]
                    </h3>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="profile-form" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" disabled placeholder="Your username" />
                            <label asp-for="Username"></label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.PhoneNumber" class="form-control"
                                   placeholder="Enter your phone number" />
                            <label asp-for="Input.PhoneNumber"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <button id="update-profile-button" type="submit"
                                class="btn btn-primary w-100 py-2 fw-semibold">
                            <i class="bi bi-save me-1"></i>Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* ==== Page Background ==== */
    body {
        background: linear-gradient(135deg, #e9f1ff, #f7f9fc);
        min-height: 100vh;
    }

    /* ==== Card Styling ==== */
    .card {
        border-radius: 1rem;
        transition: all 0.25s ease-in-out;
        border: none;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    /* ==== Buttons ==== */
    .btn-primary {
        background: #007bff;
        border: none;
        border-radius: 0.5rem;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    /* ==== Headings ==== */
    h3 {
        font-weight: 600;
        color: #004aad;
    }

    /* ==== Inputs ==== */
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    /* ==== Icons ==== */
    .bi {
        vertical-align: middle;
    }

    /* ==== Spacing adjustments ==== */
    .container {
        padding-top: 3rem;
        padding-bottom: 3rem;
    }

</style>