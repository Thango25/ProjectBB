@model Project.Models.Category

@{
    ViewData["Title"] = "Delete";
}
<div class="background-overlay"></div>

<div class="container mt-5">
    <h1 class="text-white">Delete Category</h1>

    <div class="glass-card delete-card">

        <h3 class="text-danger mb-4">Are you sure you want to delete this category?</h3>

        <div class="delete-details">
            <h4 class="card-title mb-3">Category Details</h4>
            <hr class="glass-divider" />

            <dl class="row glass-dl">

                <dt class="col-sm-3 glass-label">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 glass-value">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3 glass-label">
                    @Html.DisplayNameFor(model => model.IconClass)
                </dt>
                <dd class="col-sm-9 glass-value">
                    <span class="text-info me-2">@Html.DisplayFor(model => model.IconClass)</span>
                    <i class="@Model.IconClass fa-2x text-info"></i>
                </dd>

            </dl>

            <hr class="glass-divider" />

            <form asp-action="Delete" class="mt-4 d-flex align-items-center">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger delete-btn me-3">
                    <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                </button>

                <a asp-action="Index" class="text-info back-link">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </form>
        </div>

    </div>
</div>

<style>
    /* Re-use standard Glass Card and Dark Theme definitions */
    .container {
        color: white; /* Ensure all text is white by default */
    }

    .glass-card {
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
        margin-top: 30px;
    }

    .card-title {
        color: #f107a3; /* Vibrant pink title */
        font-weight: 600;
    }

    .glass-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.15);
    }

    /* Styling for the Definition List (dl) */
    .glass-dl .glass-label {
        color: #ccc; /* Slightly dimmed label */
        font-weight: 500;
        padding-top: 0.5rem;
    }

    .glass-dl .glass-value {
        color: white; /* Bright white value */
        font-weight: 700;
        padding-top: 0.5rem;
    }

    /* Styling for the Delete Button */
    .delete-btn {
        /* Custom danger style to match the dark theme feel */
        background-color: #dc3545; /* Default Bootstrap red */
        border: 1px solid #dc3545;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .delete-btn:hover {
            background-color: #c82333; /* Darker red on hover */
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.5); /* Glowing red shadow */
        }

    /* Back link style */
    .back-link {
        color: #7b2ff7 !important; /* Use your vibrant purple for navigation */
        text-decoration: none;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #f107a3 !important; /* Pink on hover for extra vibrancy */
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}