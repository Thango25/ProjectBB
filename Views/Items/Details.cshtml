@model Project.Models.Item

@{
    ViewData["Title"] = "Details of " + (Model.Type == Project.Models.ItemType.Lost ? "Lost Item" : "Found Item");
}

<div class="glass-card-transparent p-5 mx-auto my-5" style="max-width: 800px;">

    <div class="item-details-content text-center glass-text">
        <h1 class="mb-4">@ViewData["Title"]</h1>
        <hr class="w-75 mx-auto" />

        <div class="mb-5">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="~/uploads/@Model.PhotoPath" alt="@Model.Title" class="item-medium-image" />
            }
            else
            {
                <div class="placeholder-image d-flex align-items-center justify-content-center item-medium-image bg-secondary text-white-50 mx-auto">
                    <span class="fs-5">No Image Uploaded</span>
                </div>
            }
        </div>

        <div class="text-details-block mx-auto text-start">
            <dl class="row">
                <dt class="col-sm-4 text-end">Description:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4 text-end">Location:</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4 text-end">Date @Model.Type:</dt>
                <dd class="col-sm-8">@Model.DateLost.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-5">
        <button type="button" class="btn btn-secondary" onclick="history.back()">
            Back
        </button>
    </div>
</div>